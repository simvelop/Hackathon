<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:paddingBottom="16dp"
    android:paddingRight="16dp">

    <ImageView
        android:layout_width="40dp"
        android:layout_height="40dp"
        android:src="@drawable/ic_launcher"
        android:id="@+id/image"
        android:transitionName="@string/image"
        android:layout_marginTop="16dp"
        android:layout_marginLeft="16dp" />

    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/dateStart"
        android:textSize="14sp"
        android:padding="0dp"
        android:layout_marginTop="12dp"
        android:layout_marginLeft="72dp" />
    <TextView
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/location"
        android:textSize="14sp"
        android:padding="0dp"
        android:layout_marginTop="12dp"
        android:layout_toRightOf="@+id/dateStart"/>

    <TextView
        android:id="@+id/conflictText"
        android:visibility="gone"
        android:text="Time conflicts with another event"
        android:textSize="10sp"
        android:textStyle="italic"
        android:textColor="@android:color/holo_red_light"
        android:layout_alignParentRight="true"
        android:layout_alignBaseline="@id/location"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/headline"
        android:transitionName="@string/headline"
        android:textSize="20sp"
        android:layout_below="@+id/dateStart"
        android:layout_marginLeft="72dp" />

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:id="@+id/speaker"
        android:transitionName="@string/speaker"
        android:textSize="14sp"
        android:layout_below="@+id/headline"
        android:layout_marginStart="24dp"
        android:layout_marginTop="24dp"
        android:layout_marginLeft="72dp" />
    <ImageView
        android:layout_width="18dp"
        android:layout_height="18dp"
        android:id="@+id/favorite"
        android:layout_alignParentBottom="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true"
        />
</RelativeLayout>